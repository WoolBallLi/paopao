/* pages/group/group.wxss */
page{
  background-color: #E9E9E9;
}
.myself{
  height: 180rpx;
  position: relative;

}
.myself .myImg{
  height: 100rpx;
  width: 100rpx;
  border-radius: 100%;
  position: absolute;
  top: 60rpx;
  left: 52rpx;
}
.myself .mystep{
  font-size: 28rpx;
  line-height: 40rpx;
  position: absolute;
  top: 80rpx;
  left: 166rpx;
}
.myself .mystep_num{
  font-size: 52rpx;
  color: #24c789;
  line-height: 48rpx;
  position: absolute;
  top: 132rpx;
  left: 166rpx;
}
.comeback{
  position: absolute;
  top: 80rpx;
  right: 40rpx;
}
.comeback image{
  height: 24rpx;
  width: 28rpx;
  float: left;
  margin-right: 12rpx;
}
.comeback text{
  float: left;
  font-size: 24rpx;
  line-height: 24rpx;
  color: #F7931B ;
}
.button{
  padding: 0;
  height: 76rpx;
  width: 240rpx;
  background-color:#41E8A1; 
  color: #fff;
  text-align: center;
  font-size: 36rpx;
  line-height: 76rpx;
  margin-top: 236rpx;
  margin-bottom: 84rpx;
  box-shadow: 0 4rpx 8rpx 0 #63D6C6; 
  border-radius: 16rpx;
  display: block;
  box-sizing: border-box;
}
.GroupBox{
  overflow: hidden;
  width: 100%;
  padding: 0 40rpx 0 50rpx;
  box-sizing: border-box;
}
.Group{
  height: 160rpx;
  width: 660rpx;
  background-color: #fff;
  position: relative;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}
.GroupImg{
  height: 100rpx;
  width: 100rpx;
  background-color: #DBDFDE;
  border-radius: 12rpx;
  box-sizing: border-box; 
  position: absolute;
  top: 30rpx;
  left: 34rpx;
  padding-top: 5rpx ;
  padding-left: 5rpx ;
  border: 2rpx solid #cfcfcf;
}
.GroupImg image{
  height: 26rpx;
  width: 26rpx;
  float: left;
}
.GroupImg image:nth-of-type(2){
  margin: 0 4rpx;
}
.GroupImg image:nth-of-type(4){
  margin: 4rpx 0;
}
.GroupImg image:nth-of-type(5){
  margin: 4rpx;
}
.GroupImg image:nth-of-type(6){
  margin: 4rpx 0;
}
.GroupImg image:nth-of-type(8){
  margin: 0 4rpx;
}
.GroupName{
  font-size: 32rpx;
  line-height: 32rpx;
  position: absolute;
  top: 64rpx;
  left: 154rpx;
  max-width:380rpx;
  text-overflow:ellipsis;
  white-space:nowrap;
  overflow:hidden;
}
.GroupRank{
  font-size: 32rpx;
  line-height: 32rpx;
  position: absolute;
  top: 44rpx;
  right: 28rpx;
}
.GroupTime{
  font-size: 24rpx;
  color: #A4A4A4;
  line-height: 32rpx;
  position: absolute;
  top: 88rpx;
  right: 30rpx;
}
.nodata{
  margin-top: 186rpx;
  position: relative;
}
.noDataImg{
  width: 138rpx;
  height: 154.6rpx;
  margin-left: 306rpx;
}
.noDataText{
  text-align: center;
  font-size: 28rpx;
  color: #939393;
  line-height: 28rpx;
}
.noDataText:nth-of-type(1){
  margin-top: 51.4rpx;
  margin-bottom: 40rpx;
}
.noDataButton{
  margin-top: 0;
  margin-bottom: 0;
  position: absolute;
  bottom: 124rpx;
  left: 256rpx;
}
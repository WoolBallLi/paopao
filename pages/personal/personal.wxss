/* personal.wxss */

page {
  background-color: #e9e9e9;
}
.header {
  height: 412rpx;
  color: #fff;
  overflow: hidden;
  position: relative;
  z-index: 0;
}
.header .maskimg{
  height: 100%;
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -5;
}
.header .mask {
  height: 412rpx;
  position: absolute;
  width: 100%;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: -4;
}

.header .userID .userImg {
  height: 116rpx;
  width: 116rpx;
  border-radius: 50%;
  position: absolute;
  top: 62rpx;
  left: 318rpx;
}

.header .userID .per_username {
  font-size: 34rpx;
  margin-bottom: 32rpx;
  text-align: center;
  position: absolute;
  top: 220rpx;
  width: 100%;
  display: block;
}

.header .userID .city {
  font-size: 28rpx;
  display: block;
  width: 100%;
  color: #fff;
  margin-bottom: 26rpx;
  text-align: center;
  position: absolute;
  top: 286rpx;
}
.header .flower{
  position: absolute;
  left: 0;
  bottom: 10rpx;
  width: 100%;
}
.header .flower image:nth-of-type(1) {
  width: 24rpx;
  height: 28rpx;
  margin-left: 32rpx;
  margin-right: 30rpx;
}

.header .flower image:nth-of-type(2) {
  height: 28rpx;
  width: 34rpx;
  float: right;
  margin-right: 10rpx;
  margin-top: 10rpx;
}

.header .flower .page {
  font-size: 24rpx;
}

.header .flower .share {
  float: right;
  font-size: 24rpx;
  margin-right: 30rpx;
  line-height: 52rpx;
  color: #fff;
  border: none;
}

.main {
  width: 100%;
  height: 278rpx;
  background-color: #fafafa;
  margin-bottom: 24rpx;
  position: relative;
  overflow: hidden;
}
.main .MT_left{
  position: absolute;
  top: 66rpx;
  left: 32rpx;
  
}
.main text {
  display: inline-block;
}

.main .kg_num {
  font-size: 80rpx;
  color: #24db8d;
  margin-right: 20rpx;
}

.main .kg {
  font-size: 40rpx;
  color: #3e3f3f;
}
.main .MT_right{
  position: absolute;
  right: 60rpx;
}
.main .day_num {
  font-size: 80rpx;
  color: #24db8d;
  margin-right: 20rpx;
}

.main .day {
  font-size: 40rpx;
}

.main .leiji {
  text-align: center;
  margin-top: 182rpx;
  font-size: 36rpx;
  color: #b2b2b2;

}

.myDynamics {
  height: 342rpx;
  background-color: #fafafa;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  padding-top: 16rpx;
  padding-left: 28rpx;
}

.dynamics_num {
  float: right;
  margin-right: 32rpx;
  margin-bottom: 24rpx;
}

.dynamics_num text {
  float: left;
  margin-top: 4rpx;
  color: #a6a6a6;
}

.dynamics_num image {
  height: 32rpx;
  width: 20rpx;
  float: left;
  margin-top: 10rpx;
  margin-left: 10rpx;
}

.dynamicsImgUrl {
  height: 220rpx;
}

.ImgUrl {
  width: 240rpx;
  height: 220rpx;
  display: inline-block;
  margin-right: 20rpx;
  
}

.per_box {
  width: 100%;
  height: 278rpx;
  background: #fafafa;
  position: relative;
}

.per_box .message {
  height: 50%;
  border-bottom: 1rpx solid #ddd;
  padding-top: 50rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
  font-size: 40rpx;
  color: #3e3f3f;
}

.per_box image {
  height: 32rpx;
  width: 20rpx;
  position: absolute;
}

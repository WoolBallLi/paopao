/* pages/my_dynamic/my_dynamic.wxss */

.user_circle {
  background-color: #fff;
  padding-top: 30rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.user_circle .userId {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-left: 32rpx;
  float: left;
  margin-bottom: 48rpx;
}

.user_circle .userName {
  font-size: 32rpx;
  margin: 20rpx 11rpx 0 11rpx;
  float: left;
}

.user_circle .gender {
  width: 28rpx;
  height: 28rpx;
  float: left;
  margin-top: 26rpx;
}
.user_circle .time{
  margin-top: 72rpx;
  display: block;
  font-size: 24rpx;
  margin-left: 124rpx;
  color: #656565;
}

.user_circle .attention {
  width: 140rpx;
  float: right;
  height: 52rpx;
  display: inline-block;
  line-height: 52rpx;
  text-align: center;
  background-color: #41e8a1;
  color: #fff;
  border-radius: 6rpx;
  margin-right: 30rpx;
  margin-top: 8rpx;
  font-size: 32rpx;
}

.user_circle .textpage {
  padding-left: 26rpx;
  font-size: 32rpx;
}

.user_circle .textImage {
  margin-top: 44rpx;
  overflow: hidden;
}

.user_circle .textImage image {
  float: left;
  height: 240rpx;
  width: 246rpx;
}

.user_circle .textImage image:nth-of-type(1), .user_circle .textImage image:nth-of-type(2), .user_circle .textImage image:nth-of-type(3) {
  margin-bottom: 4rpx;
}

.user_circle .textImage image:nth-of-type(2) {
  margin: 0 6rpx;
}

.user_circle .textImage image:nth-of-type(5) {
  margin: 0 6rpx;
}

.user_circle .Icon {
  height: 100rpx;
  width: 690rpx;
  box-sizing: border-box;
  margin: 0 30rpx;
  border-bottom: 2rpx solid #eee;
  position: relative;
}

.user_circle .Icon .Icon_right {
  float: right;
}


.user_circle .Icon .Icon_right .dian{
  height: 40rpx;
  width: 48rpx;
}
.dian_mask{
  height: 248rpx;
  width: 128rpx;
  background-color: #fff;
  border-radius: 16rpx;
  position: absolute;
  right: 30rpx;
  z-index: 5;
}
.dian_mask button:nth-of-type(1){
  width: 54rpx;
  height: 44rpx;
  margin-top: 42rpx;
  margin-bottom: 70rpx;
}
.dian_mask button:nth-of-type(2){
  width: 48rpx;
  height: 54rpx;
}
.dian_mask button image{
  height: 100%;
  width: 100%;
  float: left;
}
.Mask{
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.5)
}

 .user_circle .praise {
  margin: 0 30rpx;
  margin-bottom: 28rpx;
  overflow: hidden;
}

.user_circle .praise .flo {
  height: 32rpx;
  width: 28rpx;
  margin-top: 36rpx;
  float: left;
  margin-right: 20rpx;
}

.user_circle .praise .userOid {
  height: 48rpx;
  width: 48rpx;
  border-radius: 50%;
  float: left;
  margin-top:22.4rpx;
} 

.user_circle .reply {
  font-size: 24rpx;
  padding-top: 10rpx;
  margin: 0 30rpx 20rpx 30rpx;
}

.user_circle .reply .username {
  color: #0c5ace;
}

.user_circle .reply .more {
  display: block;
  color: #838383;
  margin-top: 4rpx;
  margin-bottom: 20rpx;
}

.user_circle .reply .write {
  height: 60rpx;
  width: 690rpx;
  box-sizing: border-box;
  border: 1px solid #ddd;
  border-radius: 16rpx;
  padding-left: 20rpx;
  margin-bottom: 30rpx;
  
}

.flower_mark {
  height: 100%;
  width: 750rpx;
  background: rgba(0, 0, 0, 0.5);
  position: fixed;
  left: 0;
  top: 0;
  overflow: hidden;
  z-index: 100;
}

.flower_mark text {
  font-size: 40rpx;
  color: #fff;
  position: absolute;
  left: 196rpx;
  top: 368rpx;
}

.flower_mark image {
  height: 590rpx;
  width: 472rpx;
  position: absolute;
  top: 440rpx;
  left: 140rpx;
}
